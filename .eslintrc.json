{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "react/react-in-jsx-scope": "off",
        "indent": [
            "error",
            "tab"
        ]
    }
}
